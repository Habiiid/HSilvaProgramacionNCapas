@model ML.Usuario
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2> Usuarios </h2>
    <h3 class="text-center"> Administrador de Usuarios </h3>
    </div>

    <div class="container center-block">

        <div class="row">
            <div style="float:right">
                @Html.ActionLink("Agregar +", "Form", "Usuario", htmlAttributes: new { @class = "btn btn-success" })
            </div>
        </div>

        <div class="row">
            <table class="table table-responsive">
                <thead>
                    <tr>
                        <th> Editar </th>

                        <th class="hidden">IdUsuario</th>

                        <th> Nombre Completo </th>

                    @*  <th> Apellido Paterno </th>

                        <th> Apellido Materno </th>*@

                        <th> Fecha de Nacimiento </th>

                        <th> Genero </th>

                        <th> UserName </th>

                        <th> Email </th>

                        <th class="hidden"> Password </th>

                        <th> Telefono </th>

                        <th> Celular </th>

                        <th> CURP </th>

                        <th> Rol </th>
                       
                        <th> Imagen </th>

                        <th> Direccion </th>

                      @* <th> Numero Exterior </th>

                        <th> Numero Interior </th>

                        <th> Colonia </th>

                        <th> Codigo Postal </th>

                        <th> Municipio </th>

                        <th> Estado </th>

                        <th> Pais </th> *@

                        <th> Eliminar </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (ML.Usuario usuario in Model.Usuarios)
                    {
                    <tr>
                        <td class="text-center"><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form", "Usuario", new { IdUsuario = usuario.IdUsuario})"></a></td>
                        <td class="hidden"> @usuario.IdUsuario</td>

                        <td>
                            @usuario.Nombre
                            @usuario.ApellidoPaterno
                            @usuario.ApellidoMaterno
                        </td>

                        <td> @usuario.FechaNacimiento</td>

                        <td> @usuario.Genero</td>

                        <td> @usuario.UserName</td>

                        <td> @usuario.Email</td>

                        <td class="hidden"> @usuario.Password</td>

                        <td> @usuario.Telefono</td>

                        <td> @usuario.Celular</td>

                        <td> @usuario.CURP</td>

                        <td class="hidden"> @usuario.Rol.IdRol</td>

                        <td> @usuario.Rol.Nombre</td>

                        @*<td> @usuario.Imagen  </td>

                        @if (usuario.Imagen != null)
                         {
                          <td>  <img id="ImagenPreview" src="data:imagen;base64,@Convert.ToBase64String(usuario.Imagen)" width="100" height="100" /> </td>
                         }
                         else
                         {
                            <td> <img id="ImagenPreview" src="~/Imagen/NoUser.jpg" width="100" height="100" /> </td>
                         }*@

                        <td class="hidden"> @usuario.Direccion.IdDireccion </td>

                        <td class="hidden"> @usuario.Direccion.Colonia.Municipio.IdMunicipio</td>

                        <td class="hidden"> @usuario.Direccion.Colonia.Municipio.Estado.IdEstado</td>

                        <td class="hidden"> @usuario.Direccion.Colonia.Municipio.Estado.Pais.IdPais</td>

                        <td>
                            @usuario.Direccion.Calle
                            @usuario.Direccion.NumeroExterior
                            @usuario.Direccion.NumeroInterior
                            @usuario.Direccion.Colonia.Nombre
                            @usuario.Direccion.Colonia.CodigoPostal
                            @usuario.Direccion.Colonia.Municipio.Nombre
                            @usuario.Direccion.Colonia.Municipio.Estado.Nombre
                            @usuario.Direccion.Colonia.Municipio.Estado.Pais.Nombre
                        </td>

                        <td class="text-center"><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Usuario", new { IdUsuario = usuario.IdUsuario })" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"></a></td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
